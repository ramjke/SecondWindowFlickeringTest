<?xml version="1.0" encoding="utf-8" ?>
<Window
    x:Class="SecondWindowFlickeringTest.SecondWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:SecondWindowFlickeringTest"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="SecondWindow"
    mc:Ignorable="d">

    <StackPanel
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Orientation="Horizontal">
        <ToggleSwitch PointerEntered="ToggleSwitch_PointerEntered" />
        <Button PointerEntered="Button_PointerEntered" Content="Standard XAML button" />
    </StackPanel>
</Window>
